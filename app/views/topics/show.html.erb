<div class="main topics-show">
  <div class="container">
        <div class="topics-show-top">
            <div class="topics-show-top-title">
                <h2><%= @topic.topic_name %></h2>
            </div>
            <div class="topics-show-top-details">
                <p><%= @category.category_name %></p>
                <p><%= @topic.topic_owner %></p>
                <p><%= @topic.created_at.to_s(:datetime_jp) %></p>
            </div>
        </div>
        <div class="topics-show-posts">
            <% @posts.each do |post| %>
                <div class="topics-show-post">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <p><%= post.username %></p>
                    <p><%= post.created_at.to_s(:datetime_jp) %></p>
                </div>
            <% end %>
        </div>
    </div>
</div>