<div class="main categories-index">
    <div class="container">
        <div class ="categories-index-title">
            <h1>カテゴリから探す</h1>
        </div>
        <div class="categories-index-items">
            <% @categories.each do |category| %>
                <div class="categories-index-item">
                    <%= link_to(category.category_name, "/categories/#{category.id}") %>
                </div>
            <% end %>
        </div>
    </div>
</div>
